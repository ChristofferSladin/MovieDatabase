@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1 class="d-flex justify-content-center" style="font-weight: normal;">Välkommen</h1>
<h3 class="d-flex justify-content-center" sstyle="font-weight: bold;">Samtliga Filmer</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Filmtitel</th>
            <th>År</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            foreach (var result in movie.Results)
            {
                <tr>
                    <td>@result.id</td>
                    <td>@result.TitleText.text</td>
                    <td>@result.ReleaseYear.year</td>
                    <td><a asp-page="/MovieCard" asp-route-id="@result.id" class="read-more">Läs mer</a></td>
                </tr>
            }
        }
    </tbody>
</table>